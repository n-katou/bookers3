<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "list", user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to @user do %>
                <%= image_tag @book.user.get_profile_image(100,100) %> <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>