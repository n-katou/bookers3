<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "list", user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to @user do %>
                <%= image_tag @book.user.get_profile_image(100,100) %> <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit",edit_book_path(@book.id),class: "btn btn-sm btn-success edit_book_12227" %>
            </td>
            <td>
              <%= link_to "Destroy",book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_12227", "data-confirm" => "本当に消しますか？" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>