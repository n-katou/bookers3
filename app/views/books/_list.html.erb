<h2>User info</h2>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(user.id),class:"btn btn-outline-secondary btn-block edit_user_15910" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: "/books", method: :post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label> <br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label> <br>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>
      <% end %>